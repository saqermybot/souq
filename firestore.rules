rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- Helpers ---------- */
    function signedIn() { return request.auth != null; }

    function isAdmin() {
      return signedIn()
        && request.auth.token.email != null
        && request.auth.token.email == "alhossiniabdulhalim2@gmail.com";
    }

    function isOwner(data) {
      return signedIn()
        && (data.ownerId == request.auth.uid || data.uid == request.auth.uid);
    }

    /* ---------- Listings ---------- */
    match /listings/{id} {
      allow read: if true;

      // Create: مرن + ملكية إلزامية
      allow create: if signedIn()
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.description is string
        && request.resource.data.city is string
        && request.resource.data.categoryId is string
        && request.resource.data.currency is string
        && (request.resource.data.price is number || request.resource.data.price is string)
        && request.resource.data.images is list;

      // Update/Delete: فقط المالك أو الأدمن
      allow update, delete: if isAdmin() || isOwner(resource.data);
    }

    /* ---------- Categories (+ types) ---------- */
    match /categories/{id} {
      allow read: if true;
      allow write: if isAdmin();

      match /{sub=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    /* ---------- Users + Favorites ---------- */
    match /users/{uid} {
      allow read: if true;
      allow create, update: if signedIn() && request.auth.uid == uid;
      allow delete: if isAdmin();

      // Favorites: شخصية فقط
      match /favorites/{listingId} {
        allow read, create, delete: if signedIn() && request.auth.uid == uid;
        allow update: if false;
      }
    }

    /* ---------- Listing Stats (views + favCount) ---------- */
    match /listingStats/{listingId} {
      allow read: if true;
      allow create, update: if signedIn();
      allow delete: if isAdmin();
    }

    /* ---------- Views markers (optional) ---------- */
    match /views/{id} {
      allow create: if request.resource.data.keys().hasOnly(["listingId","fp","createdAt"]);
      allow read, update, delete: if false;
    }

    /* ---------- Chat ---------- */
    match /chats/{roomId} {
      function isParticipant() {
        return signedIn() && request.auth.uid in resource.data.participants;
      }
      function isParticipantCreate() {
        return signedIn()
          && request.resource.data.participants is list
          && request.auth.uid in request.resource.data.participants;
      }

      allow read: if isParticipant();
      allow create: if isParticipantCreate();
      allow update: if isParticipant();
      allow delete: if isAdmin();

      match /messages/{mid} {
        function chatParticipant() {
          return signedIn()
            && exists(/databases/$(database)/documents/chats/$(roomId))
            && request.auth.uid in get(/databases/$(database)/documents/chats/$(roomId)).data.participants;
        }

        allow read: if chatParticipant();

        // Create: message from the signed-in user (anonymous = ok)
        allow create: if chatParticipant()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.text is string;

        // Update: allow participants to only mark delivered/read (no edit text/sender/createdAt)
        allow update: if isAdmin() || (chatParticipant()
          && request.resource.data.senderId == resource.data.senderId
          && request.resource.data.text == resource.data.text
          && request.resource.data.createdAt == resource.data.createdAt);

        allow delete: if isAdmin();
      }
    }

    /* ---------- Reports ---------- */
    match /reports/{id} {
      allow create: if signedIn();
      allow read, update, delete: if isAdmin();
    }

  }
}
